<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/myStoryProfileStory"
        android:layout_width="176dp"
        android:layout_height="@dimen/_89mdp"
        android:scaleType="fitCenter"
        android:src="@drawable/story_img"
        android:layout_marginEnd="@dimen/_16mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="18dip"
        app:riv_mutate_background="true" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_small_story"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:src="@drawable/profile_img_01"
        app:layout_constraintStart_toStartOf="@id/myStoryProfileStory"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/white_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_circular_bg"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_small_story"
        app:layout_constraintEnd_toEndOf="@+id/profile_image_small_story"
        app:layout_constraintStart_toStartOf="@+id/profile_image_small_story"
        app:layout_constraintTop_toTopOf="@+id/profile_image_small_story"
        app:layout_constraintVertical_bias="0.692" />


    <TextView
        android:id="@+id/name_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/myStoryProfileStory"
        app:layout_constraintStart_toStartOf="@id/myStoryProfileStory"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="Ranjit Rai" />

</androidx.constraintlayout.widget.ConstraintLayout>