<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_3mdp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_profile_image"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:padding="2dp"
        android:layout_margin="@dimen/_2mdp"
        android:src="@drawable/profile_img_01"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/_2mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:background="@drawable/orange_circular_bg"
        app:layout_constraintBottom_toBottomOf="@+id/search_profile_image"
        app:layout_constraintEnd_toEndOf="@id/search_profile_image"
        app:layout_constraintStart_toStartOf="@+id/search_profile_image"
        app:layout_constraintTop_toTopOf="@+id/search_profile_image"
        app:layout_constraintVertical_bias="0.45" />


    <TextView
        android:id="@+id/searchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8mdp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Ranjit Rai"
        android:textSize="@dimen/_12font_mdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/search_profile_image"
        app:layout_constraintStart_toEndOf="@+id/search_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/searchProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer"
        android:layout_marginTop="@dimen/_3mdp"
        app:layout_constraintStart_toStartOf="@+id/searchName"
        app:layout_constraintTop_toBottomOf="@+id/searchName" />

    <Button
        android:id="@+id/followButton"
        android:layout_marginTop="@dimen/_12mdp"
        android:layout_marginEnd="@dimen/_20mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:textSize="@dimen/_10mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>